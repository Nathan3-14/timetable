{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "$schema": {"type": "string"},
        "@Exams": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z]+": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "datetime": {"type": "string"},
                            "room": {"type": "string"},
                            "seat": {"type": "string"}
                        }
                    }
                }
            }
        }
    },
    "patternProperties": {
        "[a-zA-Z]+": {
            "description": "One subject and its lessons",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "teacher_name": {"type": "string"},
                    "room": {"type": "string"},
                    "daytime": {"type": "string"}
                }
            }
        }
    }
}