{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "lesson_array": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "subject": { "type": "string" },
          "teacher_name": { "type": "string" },
          "room": { "type": "string" },
          "time": {
            "type": "string",
            "description": "In format HH:MM-HH:MM, the start and end times"
          }
        },
        "required": ["subject", "room", "time"]
      }
    }
  },
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "id": {"type": "string"},
    "subjects": {"type": "array", "items": {"type": "string"}},
    "lessons": {"type": "object", "properties": {
      "mon": {"$ref": "#/$defs/lesson_array"},
      "tue": {"$ref": "#/$defs/lesson_array"},
      "wed": {"$ref": "#/$defs/lesson_array"},
      "thu": {"$ref": "#/$defs/lesson_array"},
      "fri": {"$ref": "#/$defs/lesson_array"}
    }}
  },
  "required": ["id", "subjects", "lessons"]
}

