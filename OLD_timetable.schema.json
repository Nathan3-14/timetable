{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "$schema": {"type": "string"},
        "id": {"type": "integer"},
        "Exams": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z]+": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "datetime": {"type": "string", "description": "In format YYYY-MM-DDTHH:MM+00:00"},
                            "room": {"type": "string"},
                            "seat": {"type": "string"}
                        },
                        "required": ["datetime", "room", "seat"]
                    }
                }
            }
        },
        "Subjects": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z]+": {
                    "description": "One subject and its lessons",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "teacher_name": {"type": "string"},
                            "room": {"type": "string"},
                            "daytime": {"type": "string", "description": "In format DDD-HH:MM-HH:MM where DDD is mon, tue etc and others are start and end time"}
                        },
                        "required": ["room", "daytime"]
                    }
                }
            }
        }
    },
    "required": ["$schema", "id"]
}